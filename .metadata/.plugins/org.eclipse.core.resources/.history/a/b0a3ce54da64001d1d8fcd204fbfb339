package com.arrays;

public class MinMax {
	static class Pair{
		int min;
		int max;
	}
	static Pair getMinMax(int [] arr, int n) {
		Pair minmax = new Pair();
		if(n==1) {
			minmax.min = arr[0];
			minmax.max = arr[0];
		}
		
		if(arr[0]>arr[1]) {
			minmax.min = arr[1];
			minmax.max = arr[0];
		}else {
			for(int i=2; i<n; i++) {
				if(arr[i]>arr[i+1]) {
					minmax.min = arr[i+1];
					minmax.max = arr[i];
				}else {
					minmax.min = arr[i];
					minmax.max = arr[i+1];
				}
			}
		}
		
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
